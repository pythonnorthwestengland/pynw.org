<div metal:use-macro="layout">
  <div metal:fill-slot="head" tal:omit-tag="1">
    <meta name="description" content="The homepage of the Python North West user group" />
    <meta property="og:url" content="https://pynw.org/" />
    <meta property="og:title" content="${page.title}" />
    <meta property="og:description" content="The homepage of the Python North West user group" />
    <meta name="twitter:title" content="${page.title}" />
    <meta name="twitter:description" content="The homepage of the Python North West user group" />
  </div>

  <div metal:fill-slot="title" tal:omit-tag="1">Home</div>

  <section metal:fill-slot="content">
    <!-- Home -->
        <article id="top" class="wrapper style1">
            <div class="container">
                <div class="row">
                    <div class="col-4 col-5-large col-12-medium">
                        <span class="image fit"><img src="/pythonnw.jpg" alt="" /></span>
                    </div>
                    <div class="col-8 col-7-large col-12-medium">
                        <header>
                            <h1>Python North West</h1>
                        </header>
                        <div tal:content="structure page.html"></div>
                        <a href="/events/" class="button large scrolly">Check out our events</a>
                    </div>
                </div>
            </div>
        </article>

    <!-- Work -->
        <article id="work" class="wrapper style2">
            <div class="container">
                <header>
                    <h2>What we do</h2>
                    <p>What you can expect from <strong>Python North West</strong></p>
                </header>
                <div class="row aln-center">
                    <div class="col-4 col-6-medium col-12-small">
                        <section class="box style1">
                            <span class="icon featured fa-people-group"></span>
                            <h3>Python community</h3>
                            <p>Meet other Python enthusiasts, and engage with the Python community.</p>
                        </section>
                    </div>
                    <div class="col-4 col-6-medium col-12-small">
                        <section class="box style1">
                            <span class="icon solid featured fa-laptop"></span>
                            <h3>Talks and workshops</h3>
                            <p>Join us for informative talks and hands-on workshops led by experienced Python developers.</p>
                        </section>
                    </div>
                    <div class="col-4 col-6-medium col-12-small">
                        <section class="box style1">
                            <span class="icon featured fa-pizza-slice"></span>
                            <h3>Socials</h3>
                            <p>We organise social events too! Grab a slice of pizza or a beer with us.</p>
                        </section>
                    </div>
                </div>
            </div>
        </article>

		<!-- Portfolio -->
        <article id="portfolio" class="wrapper style3">
            <div class="container">
                <header>
                    <h2>Friends of Python North West</h2>
                </header>
                <div class="row">
                    <div class="col-4 col-6-medium col-12-small">
                        <article class="box style2">
                            <a href="https://2025.pyconuk.org/" class="image featured"><img src="/img/pic01.jpg" alt="" /></a>
                            <h3><a href="https://2025.pyconuk.org/">PyCon UK</a></h3>
                            <p>The UK's annual Python conference</p>
                        </article>
                    </div>
                    <div class="col-4 col-6-medium col-12-small">
                        <article class="box style2">
                            <a href="https://www.meetup.com/pydata-manchester/" class="image featured"><img src="/img/pic02.jpg" alt="" /></a>
                            <h3><a href="https://www.meetup.com/pydata-manchester/">PyData Manchester</a></h3>
                            <p>The Manchester chapter of the international PyData community</p>
                        </article>
                    </div>
                    <div class="col-4 col-6-medium col-12-small">
                        <article class="box style2">
                            <a href="https://www.python.org/psf-landing/" class="image featured"><img src="/img/pic03.jpg" alt="" /></a>
                            <h3><a href="https://www.python.org/psf-landing/">Python Software Foundation</a></h3>
                            <p>The charitable organisation behind the Python programming language</p>
                        </article>
                    </div>
            </div>
        </article>
  </section>
</div>